
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Upload</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="/main.js"></script>
	</head>
	<body>
		<header>
			<div class="banner">
				<div class="logo">
					<h1>File Sharing</h1>
				</div>
				<div class="opt-panel">
					<div class="btn">
						<a href="/logout">
							<button>Log Out</button>
						</a>
					</div>
					<div class="btn">
						<a href="/">
							<button>Home</button>
						</a>
					</div>
				</div>
			</div>
		</header>
		<main>
			<div class="content">
				<section class="form-section upload">
					<center>
						<br>
		
						<p>
						<h1>File Upload</h1>
						</p>
		
						<br>
						<form method="post" action="/secure/upload" enctype="multipart/form-data">
								<input type="text" name="Name" placeholder="Upload Name" value="" autofocus required />
								
								<input type="file" name="file" />
								
								<textarea name="Description" placeholder="Description of the upload"></textarea>
								
								<input type="submit" value="Upload" /></p>
						</form>
					</center>
				</section>
			</div>
		</main>
		<div class="msg">
			{{#if msg}}
			{{msg}}
			{{/if}}
		</div>
	</body>
	{{#if msg}}
	<script>
		function showMessage() {
			var msgBox = document.getElementsByClassName("msg")[0]
			msgBox.style.display = 'block'
		}
		function hideMessage() {
			var msgBox = document.getElementsByClassName("msg")[0]
			msgBox.style.display = 'none'
		}

		showMessage()
		window.setTimeout(hideMessage, 2000)
	</script>
	{{/if}}
</html>
